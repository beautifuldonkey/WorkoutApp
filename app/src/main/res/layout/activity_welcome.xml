<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="beautifuldonkey.workoutapp.WelcomeActivity">

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hello World!"
    android:id="@+id/txt_welcome"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/btn_timer"
    android:id="@+id/btn_timer"
    app:layout_constraintTop_toBottomOf="@+id/txt_welcome"
    app:layout_constraintLeft_toLeftOf="@+id/txt_welcome"/>

  <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/btn_work_out"
    android:id="@+id/btn_workout"
    app:layout_constraintTop_toBottomOf="@+id/btn_timer"
    app:layout_constraintLeft_toLeftOf="@+id/btn_timer"/>

</android.support.constraint.ConstraintLayout>
